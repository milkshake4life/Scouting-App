MDScreen:
    name: "main"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        Image:
            source: "Logo.png"
            size_hint: .8, .8
            pos_hint: {"center_x": 0.5, "center_y": 0.65}

        MDLabel:
            text: "Hello!"
            font_name: "BPoppins"
            font_size: "23sp"
            pos_hint: {"center_y": 0.38}
            halign: "center"
            color: rgba(34, 34, 34, 255)

        MDLabel:
            text: "Welcome to 589 Scouting App"
            font_name: "BPoppins"
            font_size: "13sp"
            size_hint_x: 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            halign: "center"
            color: rgba(127, 127, 127, 255)

        Button:
            text: "Login"
            font_name: "BPoppins"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(0, 130, 190, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            text: "Sign Up"
            font_name: "BPoppins"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            color: rgba(0, 130, 190, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(0, 130, 190, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100