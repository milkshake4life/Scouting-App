MDScreen:
    name: "s1i"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "scout1"

        MDLabel:
            text: "Scouting Information!"
            font_name: "BPoppins"
            font_size: "24sp"
            pos_hint: {"center_x": 0.51, "center_y": 0.85}
            halign: "center"
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text: "Choose a team's scouting information"
            font_name: "BPoppins"
            font_size: "11sp"
            size_hint_x: 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            halign: "center"
            color: rgba(127, 127, 127, 255)
        
        MDFloatLayout:
            size_hint: 0.7, 0.07
            pos_hint: {"center_x": 0.525, "center_y": 0.68}
            TextInput:
                hint_text: "Team Number"
                id: teamNumber
                font_name: "BPoppins"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(0, 0, 59, 255)
                cursor_color: rgba(0, 0, 59, 255)
                font_size: "14sp"
                cursor_width: "2sp"
                multiline: False
                input_filter: "int"
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: 0.03
                md_bg_color: rgba(178, 178, 178, 255)
            
        MDLabel:
            id: status_label
            text: ""
            font_name: "BPoppins"
            font_size: "14sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.275}
            halign: "center"
            color: rgba(255, 0, 0, 255)  # Red color for error messages
            
        Button:
            text: "Get Data"
            font_name: "BPoppins"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            on_release:
                app.all_auto_functions(app.verify_team_number(teamNumber))
                app.update_auto_button_color('auto_grid_layout')
            canvas.before:
                Color:
                    rgb: rgba(0, 130, 190, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]