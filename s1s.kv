MDScreen:
    name: "s1s"

    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "scout1"

        MDLabel:
            text: "Scouting!"
            font_name: "BPoppins"
            font_size: "26sp"
            pos_hint: {"center_x": 0.51, "center_y": 0.85}
            halign: "center"
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text: "Choose which team to scout"
            font_name: "BPoppins"
            font_size: "13sp"
            size_hint_x: 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            halign: "center"
            color: rgba(127, 127, 127, 255)